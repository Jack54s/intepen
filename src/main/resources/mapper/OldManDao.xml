<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jack.intepen.dao.OldManDao">
    <select id="queryOldMan" resultType="com.jack.intepen.entity.OldMan">
        SELECT id, name, sex, age
        FROM intepen_old_man
    </select>
    <select id="queryOldManById" resultType="com.jack.intepen.entity.OldMan">
        SELECT id, name, sex, age
        FROM intepen_old_man
        WHERE 
        id = #{id}
    </select>
    <insert id="insertOldMan" useGeneratedKeys="true" keyProperty="id"
            keyColumn="id" parameterType="com.jack.intepen.entity.OldMan">
        INSERT INTO intepen_old_man(name, sex, age)
        VALUES (#{name}, #{sex}, #{age})
    </insert>
    <update id="updateOldMan" parameterType="com.jack.intepen.entity.OldMan">
        UPDATE intepen_old_man
        SET name = #{name}, sex = #{sex}, age = #{age}
        WHERE id = #{id}
    </update>
    <delete id="deleteOldMan">
        DELETE FROM intepen_old_man
        WHERE id = #{id}
    </delete>
</mapper>